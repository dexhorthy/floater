{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "floater",
  "version": "0.1.0",
  "identifier": "com.dex.floater",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1422",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Floater",
        "width": 200,
        "height": 120,
        "center": true,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "maximizable": false,
        "minimizable": false,
        "closable": true,
        "focus": true,
        "shadow": false,
        "minWidth": 200,
        "maxWidth": 200,
        "minHeight": 120,
        "maxHeight": 120
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
